

@model Midas_Demo.Models.DataEntry

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    @{
        ViewBag.Title = "Information Managment";
    }
    <!-- Bootstrap core CSS -->

    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <link rel="stylesheet"
          href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css"></style>


    <script type="text/javascript" src="vendor/bootstrap/js/page1.js"></script>

    <style>

        .checkboxes {
            columns: 3;
        }
    </style>
    <script>
        function goForward() {
            window.history.forward()
        }</script>
    <style type="text/css">

        input[type=number].no-spinner::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input {
            width: 100%;
            height: 100%;
        }

        tr {
            width: 30px;
        }

        label {
            margin-left: 6px;
        }

        #sp {
            color: red;
        }

        tr:hover td,
        tr.even:hover td.active,
        tr.odd:hover td.active {
            background: #FFFEEE;
        }
    </style>

</head>
<body id="page-top">
    <div class="card mb-3" style="margin-top: 2%;">

        <div class="card-body">
            <div class="table-responsive">

                @using (Html.BeginForm("AddNewData", "DataEntery", FormMethod.Post))
                {
                    <table border="1" align="center" style="width:61%;" id="dataTable" cellspacing="0">
                        <tr>
                            <td><label>Name</label><span id="sp">*</span></td>
                            <td>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new {@maxlength = "256", @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new {   @class = "text-danger" })
                            </td>
                        </tr>

                        <tr>
                            <td><label>Description</label><span id="sp">*</span></td>
                            <td>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @maxlength = "1000", @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td><label>Category</label><span id="sp">*</span></td>
                            <td>
                                @Html.DropDownListFor(model => Model.Category, Model.CategoryList, "Select category")



                                 
                            </td>
                        </tr>
                        <tr>
                            <td><label>Technical Name</label><span id="sp">*</span></td>
                            <td>
                                @Html.EditorFor(model => model.TechnicalName, new { htmlAttributes = new { @maxlength = "256", @class = "form-control", required = "required" } })
                                @Html.ValidationMessageFor(model => model.TechnicalName, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td><label>Plant</label><span id="sp">*</span></td>
                            <td>
                                @Html.DropDownListFor(model => Model.Plants, Model.PlantList, "Select Plant", new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            </td>
                        </tr>



                        <tr>
                            <td><label>Frequency</label><span id="sp"></span></td>
                            <td>
                                @Html.DropDownListFor(model => Model.Frequency, Model.Frequencylist, "Select Frequency")
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>Report / Dashboard Version</label><span id="sp"></span>
                            </td>
                            <td>
                                @Html.DropDownListFor(model => Model.DashboardVersion, Model.DashboardVersionlist, "Select Version")


                            </td>
                        </tr>

                        <tr>
                            <td><label>Relevant ECC Tcode(s)</label><span id="sp"></span></td>
                            <td>
                                @Html.DropDownListFor(model => Model.tcodes, Model.Tcodelist, "Select T Code")
                            </td>
                        </tr>


                        <tr>
                            <td><label>Functional Area</label><span id="sp"></span></td>
                            <td>
                                @Html.DropDownListFor(model => Model.FunctionalArea, Model.FunctionalArealist, "Select Functional Area")
                            </td>
                        </tr>

                        <tr>
                            <td><label>Available Fields</label><span id="sp"></span></td>
                            <td>
                                @Html.DropDownListFor(model => Model.AvailableFields, Model.AvailableFieldlist, "Select AvailableField")
                                </td>
</tr>
                        <tr>
                            <td>
                                <label>Document/ Document Link</label><span id="sp">
                                </span>
                            </td>
                            <td>
                                @Html.EditorFor(model => model.DocumentLink, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DocumentLink, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td><label>User Guides</label><span id="sp"></span></td>
                            <td>
                                @Html.EditorFor(model => model.UserGuides, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserGuides, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td><label>Remarks</label><span id="sp"></span></td>
                            <td>
                                @Html.TextAreaFor(model => model.Remarks, new { htmlAttributes = new { @maxlength = "2048", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                    </table>
                    <br>
                    <table align="center">
                        <tr>
                            <td>
                                <input type="submit" value="submit" name="submit">
                            </td>
                        </tr>
                    </table>
                }
                </div>
        </div>
    </div>

    <script type="text/javascript">
    function isAlpha(keyCode) {
            if (keyCode === 9) {
                return;
            }
            return ((keyCode >= 65 && keyCode <= 90) || keyCode == 8 || keyCode == 32 || keyCode == 190)

        }
        function isAlpha1(keyCode) {

            return ((keyCode >= 65 && keyCode <= 90) || keyCode == 8 || keyCode == 32 || keyCode == 190)

        }</script>
    <!-- Scroll to Top Button -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fa fa-angle-up"></i>
    </a>


</body>
</html>

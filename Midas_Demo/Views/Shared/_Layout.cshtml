<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Information Managment</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")  

</head>
<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <a class="navbar-brand" href="#"> <img class="logo" style="width:100px;height:30px;" src="Image/midas.jpeg"  ></a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">

            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Components">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseComponents" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-wrench"></i>
                        <span class="nav-link-text">
                            Master Data
                        </span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseComponents">
                        <li>
                            <a href='@Url.Action("CategoryList", "Midas")' target="usv">Category List</a>
                        </li>
                        <li>
                            <a href='@Url.Action("Plantlist", "Plant")' class="elements" target="usv">Plant List</a>
                        </li>
                        <li>
                            <a href='@Url.Action("Frequencylist", "Frequency")' target="usv">Frequency List</a>
                        </li>

                        <li>
                            <a href='@Url.Action("FunctionAreaList", "FunctionArea")' target="usv">Functional Areas</a>
                        </li>
                        <li>
                            <a href='@Url.Action("TCodeList", "Tcode")' target="usv">T Code</a>
                        </li>

                        <li>
                            <a href='@Url.Action("AvailableFieldList", "AvailableField")' target="usv">Available Field</a>
                        </li>

                        <li>
                            <a href='@Url.Action("VersionList", "Version")' target="usv">Version</a>
                        </li>



                    </ul>
                </li>


                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Example Pages">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseExamplePages" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-file"></i>
                        <span class="nav-link-text">
                            Data Entry Form
                        </span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseExamplePages">

                        <li>
                            <a href='@Url.Action("AddNewData", "DataEntery")' target="usv">Report Guide Data Entry Form</a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Example">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#exampleModal" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-file"></i>
                        <span class="nav-link-text">
                           Others
                        </span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="exampleModal">

                        <li>
                            <a href='@Url.Action("Search_Criteria", "Search")' target="usv">Search</a>
                        </li>
                    </ul>
                </li>

            </ul>



        </div>
    </nav>
    <div class="content-wrapper">
        <div class="container-fluid">
            <iframe class="chartjs-hidden-iframe" tabindex="-1" name="usv"
                    style="display: block; overflow: hidden; border: 10px; margin: 0px; top: 0px; left: 0px;
                        bottom: 0px; right: 0px; height:568px; width: 100%; "></iframe>
        </div>
        <!-- /.container-fluid -->
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="sticky-footer">
            <div class="container">
                <div class="text-center">
                    <small>Copyright &copy; USV Private Limited 2017</small>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
